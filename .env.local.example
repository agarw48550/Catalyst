# ==============================================
# PROJECT CATALYST (RozgarSathi) - Environment Variables
# ==============================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control

# ----------------------------------------------
# Supabase Configuration
# ----------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ----------------------------------------------
# Google Gemini AI Configuration
# ----------------------------------------------
# Primary Gemini API key
GEMINI_API_KEY=your-gemini-api-key-here

# Optional: Secondary Gemini API keys for fallback
GEMINI_API_KEY_SECONDARY=your-secondary-key-here
GEMINI_API_KEY_TERTIARY=your-tertiary-key-here

# Model preferences (override defaults)
# GEMINI_DEFAULT_MODEL=gemini-2.5-pro
# GEMINI_FLASH_MODEL=gemini-2.5-flash
# GEMINI_EMBEDDING_MODEL=text-embedding-004

# ----------------------------------------------
# Email Service Configuration (Mailgun)
# ----------------------------------------------
MAILGUN_API_KEY=your-mailgun-api-key-here
MAILGUN_DOMAIN=your-domain.mailgun.org
MAILGUN_FROM_EMAIL=noreply@yourdomain.com

# ----------------------------------------------
# Email Service Fallback (Resend)
# ----------------------------------------------
RESEND_API_KEY=your-resend-api-key-here
RESEND_FROM_EMAIL=noreply@yourdomain.com

# ----------------------------------------------
# Job APIs - NCS (National Career Service India)
# ----------------------------------------------
NCS_API_KEY=your-ncs-api-key-here
NCS_API_URL=https://api.ncs.gov.in

# ----------------------------------------------
# Job APIs - Jooble
# ----------------------------------------------
JOOBLE_API_KEY=your-jooble-api-key-here
JOOBLE_API_URL=https://jooble.org/api

# ----------------------------------------------
# Job APIs - Adzuna
# ----------------------------------------------
ADZUNA_APP_ID=your-adzuna-app-id-here
ADZUNA_API_KEY=your-adzuna-api-key-here
ADZUNA_API_URL=https://api.adzuna.com/v1/api

# ----------------------------------------------
# Optional: OpenAI (for additional AI features)
# ----------------------------------------------
# OPENAI_API_KEY=your-openai-api-key-here

# ----------------------------------------------
# Optional: Hugging Face (for additional models)
# ----------------------------------------------
# HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# ----------------------------------------------
# Optional: Redis (for caching)
# ----------------------------------------------
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your-redis-password-here

# ----------------------------------------------
# Application Configuration
# ----------------------------------------------
# Base URL for the application (production)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Environment mode
NODE_ENV=development

# ----------------------------------------------
# Feature Flags
# ----------------------------------------------
NEXT_PUBLIC_ENABLE_DEBUG_DASHBOARD=true
NEXT_PUBLIC_ENABLE_VOICE_INTERVIEW=true
NEXT_PUBLIC_ENABLE_AI_COACH=true

# ----------------------------------------------
# Rate Limiting & Quotas
# ----------------------------------------------
# Max requests per user per hour
RATE_LIMIT_MAX_REQUESTS=100

# Max resume uploads per user per day
MAX_RESUME_UPLOADS_PER_DAY=10

# Max interview sessions per user per day
MAX_INTERVIEW_SESSIONS_PER_DAY=5

# ----------------------------------------------
# Security
# ----------------------------------------------
# Secret for signing tokens (generate a random string)
# JWT_SECRET=your-jwt-secret-here

# ----------------------------------------------
# Logging & Monitoring
# ----------------------------------------------
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Enable detailed API logging
ENABLE_API_LOGGING=true

# ----------------------------------------------
# External Services (Optional)
# ----------------------------------------------
# Sentry for error tracking
# SENTRY_DSN=your-sentry-dsn-here

# Analytics
# NEXT_PUBLIC_GA_ID=your-google-analytics-id-here
